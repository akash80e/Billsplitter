<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/item_describe"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circular_image"
            android:text="Item" />

        <EditText
            android:id="@+id/describeitem"
            android:inputType="text"
            android:hint="Describe an item"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp">
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_marginTop="50dp"
        android:layout_below="@id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/item_amount"
            android:layout_width="35dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/amount_image"
            android:text="Item" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:inputType="numberDecimal"
            android:hint="Enter an amount">
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_marginTop="50dp"
        android:layout_below="@id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/image_friend"
            android:layout_width="35dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_person_add_black_24dp"
            android:text="Item" />

        <EditText
            android:id="@+id/friend_username"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:inputType="textEmailAddress"
            android:hint="Enter friend's UserName">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_layout"
        android:layout_below="@id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/paidByButton"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paid_by_you">
        </Button>
        <TextView
            android:id="@+id/split_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  and split  "
            android:textSize="23dp">
        </TextView>
        <Button
            android:id="@+id/splitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equally">
        </Button>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fourth_layout"
        android:layout_below="@id/third_layout"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/upload_image"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/camera"
            >
        </Button>

        <Button
            android:id="@+id/additem"
            android:text="Add item"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">
        </Button>

    </LinearLayout>


</RelativeLayout>

