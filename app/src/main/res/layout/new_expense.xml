<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/item_describe"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circular_image"
            android:text="Item" />

        <EditText
            android:id="@+id/describeitem"
            android:hint="Describe an item"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp">
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_marginTop="50dp"
        android:layout_below="@id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/item_amount"
            android:layout_width="35dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/amount_image"
            android:text="Item" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter an amount">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_layout"
        android:layout_below="@id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/paidByButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Paid by ">
        </Button>
        <TextView
            android:id="@+id/split_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  and split  "
            android:textSize="23dp">
        </TextView>
        <Button
            android:id="@+id/splitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equally">
        </Button>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fourth_layout"
        android:layout_below="@id/third_layout"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cancel"
            android:text="Cancel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:background="@color/colorRed">
        </Button>

        <Button
            android:id="@+id/additem"
            android:text="Add item"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/colorGreen">
        </Button>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_res"
        android:layout_marginTop="500dp"
        android:text="Hello"
        android:layout_centerHorizontal="true">
    </TextView>

</RelativeLayout>

